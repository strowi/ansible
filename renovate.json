{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>strowi/ci-templates:global"
  ],
  "masterIssue": true,
  "regexManagers": [
    {
      "description": "Update Version references in Markdown files",
      "fileMatch": ["\\.md$"],
      "matchStrings": [
        "(?<depName>ansible):(?<currentValue>[a-z0-9.-]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
      ],
      "datasourceTemplate": "pypi",
      "versioningTemplate": "loose"
    },

  ]
}
